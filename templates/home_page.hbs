<script type="text/javascript">
    if (window.location.href.indexOf("return_to=%2Fhc%2Frequests") > -1) {
        window.location.href = "/hc/en-gb/articles/{{settings.article_id_confirmation}}";
    }
</script>


<!-- Main content -->
<!-- Banner -->
<section id="tl-home--banner">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <div class="tl-home--banner">
                    <div class="tl-home--banner--column">
                        <div class="tl-home--banner--card govuk-!-padding-8">
                            <h1 class="govuk-heading-xl govuk-!-margin-bottom-5 govuk-!-margin-top-0">{{settings.homepage_banner_title}}</h1>
                            <p class="govuk-body-l">{{settings.homepage_banner_text}}</p>
                            <p class="govuk-body govuk-!-margin-bottom-0"><a class="govuk-button govuk-!-margin-bottom-0" href="/hc/en-gb/articles/{{settings.homepage_banner_button_article}}">{{settings.homepage_banner_button}}</a></p>
                        </div>
                    </div>
                    <div class="tl-home--banner--column">
                        <img class="tl-image--cover" src="{{settings.homepage_banner_image}}" />
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

<!-- Benefits -->
<section id="tl-home--benefits" class="govuk-!-margin-top-9">
    <div class="govuk-width-container">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <p class="govuk-body-l govuk-!-margin-bottom-2">{{settings.homepage_benefits_intro}}</p>
            </div>
        </div>
        <div class="govuk-grid-row tl-row-fill">
            <div class="govuk-grid-column-one-third tl-row-fill">
                <h2 class="govuk-heading-l tl-home--benefit">Early <span class="govuk-!-font-weight-regular">access</span><br /><span class="govuk-body">to the brightest talent</span></h2>
            </div>
            <div class="govuk-grid-column-one-third tl-row-fill">
                <h2 class="govuk-heading-l tl-home--benefit"><span class="govuk-!-font-weight-regular">Shape the </span> future<br /><span class="govuk-body">of your industry </span></h2>
            </div>
            <div class="govuk-grid-column-one-third tl-row-fill">
                <h2 class="govuk-heading-l tl-home--benefit"><span class="govuk-!-font-weight-regular">5</span> simple <span class="govuk-!-font-weight-regular">steps</span><br /><span class="govuk-body-s"><a href="/hc/en-gb/sections/{{settings.section_id_how_industry}}" class="govuk-link">Find out how industry placements work</a></span></h2>
            </div>
        </div>
    </div>
</section>

<!-- FAP -->
{{#if settings.fap_enabled}}
<section id="tl-home--fap" class="govuk-!-margin-top-8">
    <div class="govuk-width-container">
        <div class="govuk-grid-row govuk-!-margin-top-7 tl-fap-home--container">
            <div class="govuk-grid-column-full">
                <div class="tl-card--fap">
                    <div class="tl-card--fap--left">
                        <h1 class="govuk-heading-l govuk-!-margin-top-2 govuk-!-margin-bottom-4">Partner with a school or college</h1>
                        <p class="govuk-body">Offer a placement or find out more about their T Level programme.</p>
                    </div>
                    <div class="tl-card--fap--right">
                        <form role="search" class="tl-fap-search-providers-form">
                            <span class="govuk-error-message tl-hidden" id="tl-search-term-error">You must enter a postcode or town</span>
                            <label class="govuk-visually-hidden" for="tl-search-term">Enter a postcode or town</label>
                            <input class="govuk-input govuk-input--width-10 tl-fap-home--input" id="tl-search-term" name="tl-search-term" type="text" placeholder="Enter a postcode or town">
                            <button class="govuk-button tl-button--blue tl-fap-home--submit govuk-!-margin-bottom-0" id="tl-search-providers" data-module="govuk-button">
                                Search
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{/if}}



<!-- IA -->
<section id="tl-home--ia">
    <div class="govuk-width-container govuk-main-wrapper">
        <div class="tl-home--categories">

            {{#each categories}}
            {{#isnt name "Find a T Level school or college"}}
            {{#isnt name "How this site works"}}
            {{#isnt name "T Level workshops and webinars"}}
            {{#isnt name "Tailored support sessions"}}
            {{#isnt name "Skill areas and courses"}}
            <div class="tl-home--category">
                <span class="tl-home--category--image"></span>
                <h3 class="govuk-heading-s"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">{{name}}</a></h3>
                <p class="govuk-body">{{excerpt description characters=200}}</p>
            </div>
            {{/isnt}}
            {{/isnt}}
            {{/isnt}}
            {{/isnt}}
            {{/isnt}}
            {{/each}}


        </div>
    </div>

    <div class="govuk-width-container">
        <div class="govuk-grid-row tl-row-fill">
            <div class="govuk-grid-column-two-thirds tl-row-fill">
                <div class="tl-card--grey">
                    {{#each categories}}
                    {{#is name "Skill areas and courses"}}
                    <h3 class="govuk-heading-m">{{name}}</h3>
                    <div class="govuk-grid-row">
                        <div class="govuk-grid-column-one-half">


                            {{#each sections}}
                            {{#is name "Digital and IT"}}

                            <h4 class="govuk-heading-s"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">{{name}}</a></h4>
                            <p class="govuk-body">{{excerpt description characters=200}}</p>
                            {{/is}}
                            {{/each}}

                        </div>
                        <div class="govuk-grid-column-one-half">
                            <img class="tl-image-100" id="tl-home-lower--image" src="" />
                        </div>

                    </div>
                    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

                    <p class="govuk-body"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">All skill areas</a></p>

                    {{/is}}
                    {{/each}}
                </div>

            </div>
            <div class="govuk-grid-column-one-third tl-row-fill">
                <div class="tl-card--grey">

                    {{#each categories}}
                    {{#is name "T Level workshops and webinars"}}
                    <h3 class="govuk-heading-m">{{name}}</h3>

                    {{#each sections}}
                    {{#each articles}}
                    {{#if @first}}
                    <h4 class="govuk-heading-s govuk-!-margin-bottom-1"><a id="tl-home-waw--article" class="govuk-link" href="{{url}}">{{title}}</a></h4>
                    <span class="govuk-body-s tl-text-headercase" id="tl-article--date--{{id}}"></span>
                    <script>
                            $.getJSON('/api/v2/help_center/articles/{{id}}', function (articlelabels) {

                                if (articlelabels.article.label_names && articlelabels.article.label_names.length) {
                                    articlelabels.article.label_names.forEach(function (labelname) {

                                        if (labelname.indexOf("date") != -1) {
                                            var date = labelname.split('/')[1];
                                            $("#tl-article--date--{{id}}").text(date);
                                        }
                                    });
                                }
                            });

                    </script>

                    {{/if}}
                    {{/each}}
                    {{/each}}
                    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                    {{#each sections}}
                    <p class="govuk-body"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">All workshops and webinars</a></p>
                    {{/each}}
                    {{/is}}
                    {{/each}}
                </div>

            </div>
        </div>
    </div>
</section>



<!-- Lower Boxes -->
<section id="tl-home--lower">
    <div class="govuk-width-container govuk-!-margin-top-5 govuk-!-margin-bottom-5">

        <div id="tl-home--contact" class="tl-js-visible">
            <div class="govuk-grid-row tl-row-fill">
                <div class="govuk-grid-column-one-half tl-row-fill">
                    <div class="tl-card--purple" id="tl-home--question">
                        <h3 class="govuk-heading-m">Have a T Levels question?</h3>
                        <p class="govuk-body">
                            Our T Levels support bot is here to help you find the answers.<a href="#" id="tl-home--answerbot" class="govuk-link">Ask a question</a>
                        </p>
                    </div>
                </div>

                <div class="govuk-grid-column-one-half tl-row-fill">
                    <div class="tl-card--purple tl-js-hidden" id="tl-home--ticket">
                        <h3 class="govuk-heading-m">Contact us</h3>
                        <p class="govuk-body">If you’d like to speak to someone about T Levels or industry placements, or can’t find what you’re looking for, {{#link 'new_request' class='govuk-link tl-home--contact'}}contact us{{/link}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (!isAgent()) {
            $("#tl-home--ticket").show();
        }
    });

    $('#tl-home--answerbot').click(function () {
        openHelp();
        event.preventDefault();
    });

    $("#tl-home-lower--image").attr("src", "{{settings.home_image_lower}}");



</script>

<script src="{{asset 'findProviderTile.js'}}"
        data-findProviderRedirectUrl="/hc/en-gb/articles/{{settings.article_id_find_provider}}"
