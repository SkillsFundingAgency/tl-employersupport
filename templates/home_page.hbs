<script type="text/javascript">
    if (window.location.href.indexOf("return_to=%2Fhc%2Frequests") > -1) {
        window.location.href = "/hc/en-gb/articles/{{settings.article_id_confirmation}}";
    }
</script>


<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner">
        <p class="govuk-phase-banner__content">
            <a href="{{settings.survey_link}}" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service - <a class="govuk-link" href="{{settings.survey_link}}" id="tl-header--feedback">help us to improve it</a>
            </span>
        </p>
    </div>
</div>

<!-- Main content -->
<main id="main-content" role="main">
    <!-- Banner -->
    <div class="tl-home--banner">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-three-quarters">
                    <h1 class="govuk-heading-xl govuk-!-margin-bottom-5 govuk-!-margin-top-3">{{settings.service_name}}</h1>
                </div>
                <div class="govuk-grid-column-full govuk-!-margin-top-5">
                    <hr class="govuk-section-break govuk-section-break--visible tl-section-break--blue">
                </div>
            </div>
        </div>
    </div>

    <!-- Lower Content -->
    <div class="govuk-width-container govuk-main-wrapper">
        <div class="tl-home--categories">

            {{#each categories}}
            {{#isnt name "How this site works"}}
            {{#isnt name "Workshops and webinars"}}
            {{#isnt name "Talk to a specialist"}}
            <div class="tl-home--category">
                <span class="tl-home--category--image"></span>
                <h3 class="govuk-heading-m"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">{{name}}</a></h3>
                <p class="govuk-body">{{excerpt description}}</p>
            </div>
            {{/isnt}}
            {{/isnt}}
            {{/isnt}}
            {{/each}}

            {{#each categories}}
            {{#is name "Workshops and webinars"}}
            {{#each sections}}
            <div class="tl-home--category">
                <span class="tl-home--category--image"></span>
                <h3 class="govuk-heading-m"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">{{name}}</a></h3>
                <p class="govuk-body">{{excerpt description}}</p>
            </div>
            {{/each}}
            {{/is}}
            {{/each}}


        </div>
        <div class="govuk-grid-row govuk-!-margin-top-7">
            <div class="govuk-grid-column-one-half">
                <h2 class="govuk-heading-l">About T Levels</h2>
                <p class="govuk-body">
                    <a href="https://www.tlevels.gov.uk/" class="govuk-link">T Levels</a> are a new qualification for students aged 16-19 who've finished GSCEs. They sit alongside A Levels and apprenticeships to give young people the technical and practical skills needed to be an asset in the workplace.
                </p>
                <p class="govuk-body">T Levels combine classroom learning with a substantial industry placement.</p>
            </div>

            <div class="govuk-grid-column-one-half">
                <iframe class="tl-home--video" width="560" height="315" src="https://www.youtube-nocookie.com/embed/tjNeXtgFQ4Y?rel=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h2 class="govuk-heading-l govuk-!-margin-top-7">Contact us</h2>
                <p class="govuk-body">Have questions, or interested in offering an industry placement? Get in touch.</p>
            </div>

            <div class="govuk-grid-column-one-half">
                <div class="tl-card tl-js-hidden" id="tl-home--ticket">
                    <h3 class="govuk-heading-m">Online and phone</h3>
                    <p class="govuk-body">Use our {{#link 'new_request' class='govuk-link' }}online contact form{{/link}} to ask us a question or tell us if you're ready to offer an industry placement.</p>
                    <p class="govuk-body">You'll usually receive a reply within 2 working days.</p>
                    <p class="govuk-body">Or you can call us on 0800 150 600 (choose option 4).</p> 
                    <p class="govuk-body">Our opening times are 8am to 10pm, Monday to Friday.</p>
                    <p class="govuk-body"><a href="https://www.gov.uk/call-charges" class="govuk-link" target="_blank">Find out about call charges</a>.</p>                        
                </div>
            </div>

            <div class="govuk-grid-column-one-half">
                {{#each categories}}
                {{#is name "Talk to a specialist"}}
                <div class="tl-card" id="tl-home--phone">
                    <h3 class="govuk-heading-m">{{name}}</h3>
                    <p class="govuk-body">
                        Get free, hands-on support to help you plan, prepare and deliver an industry placement.
                    </p>
                    <p class="govuk-body">
                        We offer varying levels of support, from one-to-one phone calls to online group sessions.
                    </p>
                    <p class="govuk-body"><a href="{{url}}" class="govuk-link">Find out more</a>.</p>
                </div>
                {{/is}}
                {{/each}}
            </div>

        </div>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (!isAgent()) {
            $("#tl-home--ticket").show();
        }
    });
</script>