                    <p class="govuk-body"><a href="https://www.gov.uk/call-charges" id="tl-home--charges" class="govuk-link" target="_blank">Find out about call charges</a></p>
                </div>
            </div>

            <div class="govuk-grid-column-one-half tl-row-fill">
                {{#each categories}}
                {{#is name "Tailored support sessions"}}
                <div class="tl-card" id="tl-home--phone">
                    <h3 class="govuk-heading-m">{{name}}</h3>
                    <p class="govuk-body">
                        If you need more help getting ready to host an industry placement, we offer free, tailored support.
                    </p>
                    <p class="govuk-body">
                        Our industry placement specialists are here to help you plan, prepare and deliver your industry placement through one-to-one phone calls or online group sessions.
                    </p>
                    <p class="govuk-body"><a href="{{url}}" id="tl-home--specialist" class="govuk-link">Find out more</a></p>
                </div>
                {{/is}}
                {{/each}}
            </div>

        </div>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (!isAgent()) {
            $("#tl-home--ticket").show();
        }
    });

    $(document).ready(function() {
        $('#tl-postcode').val("");

        $('#tl-postcode').keypress(function (e) {
            if (e.which === 13) {
                $("#tl-search-providers").click();
                return false;
            }
        });

        $("#tl-search-providers").click(function() {
            const postcode = $("#tl-postcode").val().trim();

            if (postcode === "") {
                event.stopPropagation();
                showPostcodeError("Enter a postcode");
                return false;
            }

            const searchParams = new URLSearchParams({
                search: postcode
            }).toString();

            $(location).attr('href', `/hc/en-gb/articles/{{settings.article_id_find_provider}}?${searchParams}`);
            
            return true;
        });

        function showPostcodeError(message) {
            $("#tl-postcode-error").text(message);
            $('#tl-postcode-error').removeClass("tl-hidden");
        }
    });
</script>