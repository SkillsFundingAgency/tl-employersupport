<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner">
        <p class="govuk-phase-banner__content">
            <a href="{{settings.survey_link}}" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service - <a class="govuk-link" href="{{settings.survey_link}}" id="tl-header--feedback-link">help us to improve it</a>
            </span>
        </p>
    </div>
</div>


<!-- Main content -->
<main id="main-content" role="main">
    <!-- Error page content -->
    <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                {{#is error 'unauthorized'}}
                <h1 class="govuk-heading-l">You must sign in to view this page</h1>
                <p class="govuk-body">
                    If you do not have an account, you can set one up after you click 'Sign in'.
                </p>

                <p class="govuk-body">
                    {{#link "sign_in" class="govuk-button" role='button'}}
                    Sign in
                    {{/link}}
                </p>
                <p class="govuk-body">
                    {{#link 'help_center' class='govuk-link' }}
                    Back to home page
                    {{/link}}
                </p>
                {{/is}}

                {{#is error 'forbidden'}}
                <h1 class="govuk-heading-l">You cannot access this page</h1>
                <p class="govuk-body">
                    Your account is not authorised to view this page.
                </p>
                <p class="govuk-body">
                    If you need further help, email <a href="mailto:support.deliveringtlevels@education.gov.uk" class="govuk-link">support.deliveringtlevels@education.gov.uk</a>.
                </p>
                <p class="govuk-body">
                    {{#link 'help_center' class='govuk-link' }}
                    Back to home page
                    {{/link}}
                </p>
                {{/is}}

                {{#is error 'not_found'}}
                <h1 class="govuk-heading-l">Page not found</h1>
                <p class="govuk-body">
                    If you typed the web address, check it is correct.
                </p>
                <p class="govuk-body">
                    If you pasted the web address, check you copied the entire address.
                </p>
                <p class="govuk-body">
                    If you still need help, email <a href="mailto:support.deliveringtlevels@education.gov.uk" class="govuk-link">support.deliveringtlevels@education.gov.uk</a>.
                </p>
                <p class="govuk-body">
                    {{#link 'help_center' class='govuk-link' }}
                    Back to home page
                    {{/link}}
                </p>
                {{/is}}




            </div>
        </div>

    </div>
</main>








