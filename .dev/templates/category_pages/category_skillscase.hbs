<!-- Main content -->
    <div class="govuk-width-container">
        <div id="tl-breadcrumbs--category">
            <div class="tl-breadcrumbs">
                {{breadcrumbs}}
            </div>
        </div>
    </div>


    <!-- Article Content -->
    <div class="govuk-width-container govuk-main-wrapper">
        <section id="tl-category--header">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h1 class="govuk-heading-xl govuk-!-margin-bottom-7">{{category.name}}</h1>


                    <div class="tl-hero">
                        <div class="tl-hero--column">
                            <div class="tl-hero--card govuk-!-padding-8">
                                <h2 class="govuk-heading-l govuk-!-margin-bottom-5 govuk-!-margin-top-0">{{settings.skillareas_header}}</h2>
                                <p class="govuk-body">{{category.description}}</p>
                            </div>
                        </div>
                        <div class="tl-hero--column">
                            <img class="tl-image--cover" src="{{settings.skillareas_image}}" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">



                {{#if category.description}}
                <p class="govuk-body-l"></p>
                {{/if}}
                <section>

                    {{#is sections.length 1}}
                    {{#each sections}}
                    <ul class="govuk-list">
                        {{#if articles}}

                        {{#each articles}}
                        <li>
                            <a class="govuk-link govuk-!-margin-bottom-1" href="{{url}}">{{title}}</a>
                        </li>
                        {{/each}}

                        {{else}}
                        <ul class="govuk-list">
                            <li>
                                <p class="govuk-body">There's nothing here at the moment</p>
                            </li>
                        </ul>
                        {{/if}}
                    </ul>
                    {{/each}}
                    {{else}}
                    <div class="govuk-accordion" data-module="govuk-accordion" id="accordion-default--{{category.id}}">

                        {{#each sections}}
                        <div class="govuk-accordion__section ">
                            <div class="govuk-accordion__section-header">
                                <h2 class="govuk-accordion__section-heading">
                                    <span class="govuk-accordion__section-button" id="accordion-default-heading-{{id}}">
                                        {{name}}
                                    </span>
                                </h2>
                            </div>
                            <div id="accordion-default-content-{{id}}" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-{{id}}">
                                {{#if articles}}
                                <ul class="govuk-list tl-flex-list">
                                    {{#each articles}}

                                    <li {{#each labels}}{{#is identifier 'casestudy'}}class="govuk-!-font-weight-bold tl-flex-list--first"{{/is}}{{/each}}>
                                        <a class="govuk-link tl-category--article" href="{{url}}">{{title}}</a>
                                    </li>
                                    {{/each}}

                                    {{#if more_articles}}
                                    <li class="govuk-!-margin-top-4">
                                        <a class="govuk-link govuk-body-s tl-category--more" href="{{url}}">
                                            {{t 'show_all_articles' count=article_count}}
                                        </a>
                                    </li>
                                    {{/if}}
                                </ul>
                                {{else}}
                                <ul class="govuk-list">
                                    <li>
                                        <p class="govuk-body">There's nothing here at the moment</p>
                                    </li>
                                </ul>
                                {{/if}}
                            </div>
                        </div>
                        {{/each}}
                    </div>

                    {{/is}}
                </section>
            </div>
        </div>
    </div>
</main>

