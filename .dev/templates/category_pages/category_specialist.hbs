<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner tl-phase-banner--home">
        <p class="govuk-phase-banner__content">
            <a href="{{settings.survey_link}}" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service - <a class="govuk-link" href="{{settings.survey_link}}" id="tl-header--feedback-link">help us to improve it</a>
            </span>
        </p>
    </div>
</div>


<!-- Main content -->
<main id="main-content" role="main">

    <div class="govuk-width-container">
        <div id="tl-breadcrumbs--category">
            <div class="tl-breadcrumbs">
                {{breadcrumbs}}
            </div>
        </div>
    </div>




    <!-- Category Content -->
    <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">{{category.name}}</h1>
                {{#if category.description}}
                <p class="govuk-body-l">{{category.description}}</p>
                {{/if}}
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h2 class="govuk-heading-m">Levels of support</h2>
            </div>
            <div class="govuk-grid-column-one-third">
                <div class="tl-card">
                    <h3 class="govuk-heading-m">Email</h3>
                    <p class="govuk-body">Do you have a question about industry placements?</p>
                    <p class="govuk-body">Send us your question, using our <a href="https://employerindustryplacements.co.uk/contact/" class="govuk-link">contact form</a>. One of our specialists will reply to you within 2 working days.</p>
                </div>
            </div>

            <div class="govuk-grid-column-one-third">
                <div class="tl-card">
                    <h3 class="govuk-heading-m">One-to-one phone call</h3>
                    <p class="govuk-body">
                        Do you have a specific issue that you want to chat through on the phone?
                    </p>
                    <p class="govuk-body">
                        Submit a <a href="https://employerindustryplacements.co.uk/hands-on-support/support-form/" class="govuk-link">request form</a> and we’ll arrange a call between you and one of our specialists.
                    </p>
                </div>
            </div>

            <div class="govuk-grid-column-one-third">
                <div class="tl-card">
                    <h3 class="govuk-heading-m">Online group session</h3>
                    <p class="govuk-body">
                        Do you have several colleagues or partner organisations who need help understanding, planning or delivering industry placements?
                    </p>
                    <p class="govuk-body">
                        Submit a <a href="https://employerindustryplacements.co.uk/hands-on-support/support-form/" class="govuk-link">request form</a> and we’ll arrange an online meeting for your group, with one of our specialists.
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

